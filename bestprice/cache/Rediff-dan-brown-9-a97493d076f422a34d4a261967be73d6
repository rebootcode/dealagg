function KeyCheck(e)
{
   var KeyID = (window.event) ? event.keyCode : e.keyCode;
   if(KeyID=="13") {
		//doSearch();
   }
}
function doSearch() {
		var tag = document.getElementById("MT").value;
		tag = replaceAll(tag," ","-");
		var url = "http://books.rediff.com/book/"+tag;
		window.location = url;
	}

	function category_load(tag)
	{
		if(isIE)
		{  
			   document.getElementById('ajaxnav').src = org_domain+"/mockpage?hash=!"+tag;
			
		}
		else
		{
			parent.location.hash = "!"+tag;
		}
	}
